<div class="container py-4">
  <h1 class="mb-4 text-center text-primary fw-bold">Usuários da Empresa: <%= @company.name %></h1>

  <div class="d-flex justify-content-end mb-3">
    <%= link_to "Voltar para Empresas", companies_path, class: "btn btn-secondary" %>
  </div>

  <% if @users.any? %>
  <ul class="list-group">
    <% @users.each do |user| %>
    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
      <div>
        <strong><%= user.display_name %></strong> – @<%= user.username %><br>
        <small class="text-muted"><%= user.email %></small>
      </div>
      <div class="d-flex align-items-center gap-2 mt-2 mt-md-0">
        <span class="badge bg-info rounded-pill">ID: <%= user.id %></span>
        <% if user.username.present? %>
        <%= link_to "Ver Tweets", tweets_path(user_username: user.username), class: "btn btn-outline-primary btn-sm" %>
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>
  <% else %>
  <div class="alert alert-warning text-center">Nenhum usuário cadastrado para esta empresa.</div>
  <% end %>
</div>