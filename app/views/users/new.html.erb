<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm border-0">
      <div class="card-body">

        <h2 class="text-primary fw-bold text-center mb-4">Cadastro de Usuário</h2>

        <%= form_with model: @user, url: create_user_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :username, class: "form-label" %>
          <%= f.text_field :username, class: "form-control", placeholder: "Seu nome de usuário" %>
        </div>

        <div class="mb-3">
          <%= f.label :display_name, class: "form-label" %>
          <%= f.text_field :display_name, class: "form-control", placeholder: "Nome completo" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "exemplo@email.com" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirme a senha" %>
        </div>

        <div class="mb-3">
          <%= f.label :company_id, "Empresa", class: "form-label" %>
          <%= f.number_field :company_id, class: "form-control", value: @user.company_id, disabled: true %>
          <%= f.hidden_field :company_id, value: @user.company_id %>
        </div>

        <div class="d-grid mb-3">
          <%= f.submit "Cadastrar", class: "btn btn-primary fw-bold" %>
        </div>
        <% end %>

        <div class="text-center">
          <%= link_to "Voltar para Lista de Usuários", company_users_list_path(@user.company_id), class: "btn btn-secondary" %>
        </div>

      </div>
    </div>
  </div>
</div>