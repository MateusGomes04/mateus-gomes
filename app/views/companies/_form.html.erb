<%= form_with model: @company, local: true, class: "needs-validation" do |f| %>
<div class="mb-3">
  <%= f.label :name, "Nome da Empresa", class: "form-label" %>
  <%= f.text_field :name, class: "form-control", required: true %>
</div>

<%= f.submit @company.new_record? ? "Criar Empresa" : "Atualizar Empresa", class: "btn btn-primary" %>
<% end %>